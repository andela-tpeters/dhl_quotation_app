extends layouts/base.pug
block content
	.row
		.four.columns
      h4 Parcel Details
      hr
      table.u-full-width
        tr
          td DHL Product
          td #{$quote['product_name']}
        tr
          td Origin Location
          td #{$quote['from']} - #{$quote['origin_location']}
        tr
          td Origin Zip Code
          td #{$quote['from_postal_code']}
        tr
          td Destination Location
          td #{$quote['to']} - #{$quote['destination_location']}
        tr
          td Destination Zip Code
          td #{$quote['to_postal_code']}
        tr
          td Parcel Dimensions Weight
          td #{$quote['weight']} #{$quote['weight_unit']}
        tr
          td Parcel Dimensions
          td #{$quote['length']} X #{$quote['width']} X #{$quote['height']} #{$quote['dim_unit']}
        tr
          td No of Pieces
          td #{$quote['no_of_pieces']}
  	.eight.columns
      .row
        .twelve.columns
          h4 Checkout
          hr
  	      .row
            form.twelve.columns#example-form(action='/dhl/pages/summary', method="GET", style="border: 1px solid #efefef; padding: 30px 20px; background-color: #f8f8f8")
    	        //- include partials/personal_fields.pug
              button.twelve.columns.button.button-primary(type='button', data-toggle='collapse', data-target='#personalDetails', aria-expanded='expanded', aria-controls='collapseExample')
                | Personal Details
              #personalDetails.collapse.in
                .row
                  .twelve.columns
                    div.collapse-container
                      h5 My Details
                      section
                        .row
                          .two.columns
                            label.twelve.columns Name *
                          .three.columns
                            select.twelve.columns.required(name="checkout[title]", required="required")
                              option(value="mr") Mr
                              option(value="mrs") Mrs
                              option(value="dr") Dr
                          .three.columns
                            input.twelve.columns.required(name="checkout[firstname]", type='text', required="required")
                          .three.columns
                            input.twelve.columns.required(name="checkout[lastname]", type='text', required="required")
                        .row
                          .two.columns
                            label.twelve.columns Email *
                          .eight.columns
                            input.twelve.columns.required(name="checkout[email]", type='text', required="required")
                      hr
                      section
                        .row
                          .three.columns.u-pull-right
                            button.button.button-primary(type='button', data-toggle='collapse', data-target='#parcelDetails', aria-expanded='expanded', aria-controls='collapseExample') Next
    	        include partials/parcel_fields.pug
    	        include partials/protect_parcel_fields.pug
    	        include partials/shippers_details_fields.pug
    	        include partials/delivery_details_fields.pug
    	        include partials/custom_details_fields.pug
              include partials/schedule_pickup.pug
    	        include partials/where_to_mail.pug
      	      .row
      	      	.six.columns.u-pull-right
      	      		button.u-pull-right.button(type="submit", style="background-color: white") Submit
